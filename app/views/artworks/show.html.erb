<%= link_to 'Home', root_path %>
<br>
<%= @artwork.user.username %>
<%= @artwork.updated_at %>
<%= image_tag @artwork.image.url(:large) %>
<%= @artwork.caption %>
<%= @artwork.description %>
<br>

<%= social_share_button_tag(@artwork.caption) %>


<%= pluralize(@artwork.likes.count, "Like") %>

<%= button_to 'Like', like_artwork_path, method: :post %>

<%= pluralize(@artwork.comments.count, "Comment") %>
<p>Comments</p>

<% @comments.each do |comment| %>
<%= comment.user.username %>
<%= comment.content %>
<% end %>

<%= render 'comments/form' %>

<% if user_signed_in? %>
<% if current_user.artist? %>
<%= link_to 'Edit', edit_artwork_path(@artwork) %>
<%= link_to 'Delete', artwork_path(@artwork), 
							method: :delete, data: {confirm: 'Are you sure?'} %>
<% end %>
<% end %>
