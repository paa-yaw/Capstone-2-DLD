<%= link_to 'Home', root_path %>
<br>
<%= @artwork.user.username %>
<%= @artwork.updated_at %>
<%= image_tag @artwork.image.url(:large) %>
<%= @artwork.caption %>
<%= @artwork.description %>
<%= pluralize(@artwork.get_upvotes.size, 'Like') %>
<%= link_to 'like', like_artwork_path(@artwork), method: :get %>
<br>

<%= social_share_button_tag(@artwork.caption) %>




<%= pluralize(@artwork.comments.count, "Comment") %>
<p>Comments</p>

<% @comments.each do |comment| %>
<%= comment.user.username %>
<%= comment.content %>
<% end %>

<%= render 'comments/form' %>

<% if user_signed_in? %>
<% if current_user.artist? %>
<%= link_to 'Edit', edit_artwork_path(@artwork) %>
<%= link_to 'Delete', artwork_path(@artwork), 
							method: :delete, data: {confirm: 'Are you sure?'} %>
<% end %>
<% end %>
